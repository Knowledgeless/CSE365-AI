<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/llAnswerArea"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivAnswerer"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/amit_sir"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvAnswererName"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#111"
                    android:text="Answer holder"/>

                <TextView
                    android:id="@+id/tvAnswerTime"
                    android:textSize="11dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="answer time"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tvAnswerText"
                android:textColor="#222"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/answer_sample"/>

            <LinearLayout
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivThumbUpAnswer"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:src="@drawable/ic_thumb_up_black_24dp"/>

                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/tvTotalThumbUpOfAnswer"
                    android:textColor="#666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 101"/>

                <ImageView
                    android:layout_marginLeft="30dp"
                    android:id="@+id/ivThumbDownAnswer"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:src="@drawable/ic_thumb_down_black_24dp"/>

                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/tvTotalThumbDownOfAnswer"
                    android:textColor="#666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 40"/>

                <ImageView
                    android:layout_marginLeft="40dp"
                    android:id="@+id/ivCommentAnswer"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:src="@drawable/ic_comment_black_24dp"/>

                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/tvTotalCommentOfAnswer"
                    android:textColor="#666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 1.1 k"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llCommentArea"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/llComment1Area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:orientation="vertical">

            <LinearLayout
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivCommenter1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/sakib"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_marginLeft="10dp"
                            android:id="@+id/tvCommenter1Name"
                            android:textColor="#111"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Comment Holder 1"/>

                        <TextView
                            android:textSize="11dp"
                            android:layout_marginLeft="10dp"
                            android:id="@+id/tvCommenter1Time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="comment time"/>
                    </LinearLayout>

                    <TextView
                        android:layout_marginLeft="10dp"
                        android:id="@+id/tvCommenter1Text"
                        android:textColor="#111"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/comment1_sample"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_marginLeft="40dp"
                    android:id="@+id/ivThumbUpComment1"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_thumb_up_black_24dp"/>

                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/tvTotalThumbUpOfComment1"
                    android:textColor="#666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 120"/>

                <ImageView
                    android:layout_marginLeft="30dp"
                    android:id="@+id/ivThumbDownComment1"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_thumb_down_black_24dp"/>
                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/tvTotalThumbDownOfComment1"
                    android:textColor="#666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 20"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llComment2Area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:orientation="vertical">

            <LinearLayout
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivCommenter2"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/nawrine"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_marginLeft="10dp"
                            android:id="@+id/tvCommenter2Name"
                            android:textColor="#111"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Comment Holder 1"/>

                        <TextView
                            android:textSize="11dp"
                            android:layout_marginLeft="10dp"
                            android:id="@+id/tvCommenter2Time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="comment time"/>
                    </LinearLayout>

                    <TextView
                        android:layout_marginLeft="10dp"
                        android:id="@+id/tvCommenter2Text"
                        android:textColor="#111"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/comment2_sample"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_marginLeft="40dp"
                    android:id="@+id/ivThumbUpComment2"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_thumb_up_black_24dp"/>

                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/tvTotalThumbUpOfComment2"
                    android:textColor="#666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 3"/>

                <ImageView
                    android:layout_marginLeft="30dp"
                    android:id="@+id/ivThumbDownComment2"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_thumb_down_black_24dp"/>
                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/tvTotalThumbDownOfComment2"
                    android:textColor="#666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_marginLeft="65dp"
            android:id="@+id/viewAllComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="#000FFF"
            android:text="VIEW ALL N REPLIES"/>
    </LinearLayout>
</LinearLayout>